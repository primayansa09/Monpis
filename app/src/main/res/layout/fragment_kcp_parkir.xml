<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context=".KCP.KCPParkirFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/name7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@color/white"/>
        //1
        <TextView
            android:id="@+id/tv_1"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:maxLines="8"
            android:text="@string/p_1"
            android:textColor="@color/black"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="16dp"/>

        <LinearLayout
            android:id="@+id/lyt_camera_parkie_kcp1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/tv_1"
            android:gravity="center">
            <ImageView
                android:id="@+id/camera_parkir_kcp1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/tv_1"
                android:src="@drawable/ic_camera" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_parkir_kcp1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/lyt_camera_parkie_kcp1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:layout_toRightOf="@id/tv_1"
            android:adjustViewBounds="true"
            android:background="@drawable/background_list"
            android:scaleType="fitXY"
            android:src="@drawable/ic_image" />
        <RadioGroup
            android:id="@+id/btn_pilihParkirKcp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_parkir_kcp1"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp">
            <RadioButton
                android:id="@+id/btn_standarParkir1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/standar"/>
            <RadioButton
                android:id="@+id/btn_tidakStandarparkir1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tidak_standar"
                android:checked="false"/>
        </RadioGroup>
        //2
        <TextView
            android:id="@+id/tv_2"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:maxLines="8"
            android:text="@string/p_2"
            android:textColor="@color/black"
            android:layout_marginTop="70dp"
            android:layout_below="@id/btn_pilihParkirKcp1"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="16dp"/>

        <LinearLayout
            android:id="@+id/lyt_camera_parkie_kcp2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_toRightOf="@+id/tv_2"
            android:layout_below="@id/btn_pilihParkirKcp1"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="16dp">
            <ImageView
                android:id="@+id/camera_parkir_kcp2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/tv_1"
                android:src="@drawable/ic_camera" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_parkir_kcp2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_toRightOf="@id/tv_2"
            android:layout_below="@id/lyt_camera_parkie_kcp2"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_image"
            android:background="@drawable/background_list"/>
        <RadioGroup
            android:id="@+id/btn_pilihParkirKcp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_parkir_kcp2"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp">
            <RadioButton
                android:id="@+id/btn_standarParkir2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/standar"/>
            <RadioButton
                android:id="@+id/btn_tidakStandarparkir2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tidak_standar"
                android:checked="false"/>
        </RadioGroup>
        //3
        <TextView
            android:id="@+id/tv_3"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:maxLines="8"
            android:text="@string/p_3"
            android:textColor="@color/black"
            android:layout_marginTop="70dp"
            android:layout_below="@id/btn_pilihParkirKcp2"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="16dp"/>

        <LinearLayout
            android:id="@+id/lyt_camera_parkir_kcp3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_3"
            android:gravity="center"
            android:layout_below="@id/btn_pilihParkirKcp2"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/camera_parkir_kcp3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_camera" />
        </LinearLayout>
        <ImageView
            android:id="@+id/img_parkir_kcp3"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_toRightOf="@id/tv_3"
            android:layout_below="@id/lyt_camera_parkir_kcp3"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_image"
            android:background="@drawable/background_list"/>
        <RadioGroup
            android:id="@+id/btn_pilihParkirKcp3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_parkir_kcp3"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="20dp">
            <RadioButton
                android:id="@+id/btn_standarParkir3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/standar"/>
            <RadioButton
                android:id="@+id/btn_tidakStandarparkir3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tidak_standar"
                android:checked="false"/>
        </RadioGroup>

        <Button
            android:id="@+id/btn_saveParkirKCP"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@id/btn_pilihParkirKcp3"
            android:text="Save"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </RelativeLayout>

</ScrollView>