<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context=".KC.ParkirFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="10sp"/>


    //1
    <TextView
        android:id="@+id/tv_1"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:maxLines="8"
        android:text="@string/p_1"
        android:textColor="@color/black"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="16dp"/>

        <LinearLayout
            android:id="@+id/lyt_camera_parkir_kc1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tv_1"
            android:layout_marginEnd="16dp">
            <ImageView
                android:id="@+id/camera_parkir1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_camera" />
        </LinearLayout>


        <ImageView
            android:id="@+id/img_parkir1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/lyt_camera_parkir_kc1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:layout_toRightOf="@id/tv_1"
            android:adjustViewBounds="true"
            android:background="@drawable/background_list"
            android:scaleType="fitXY"
            android:src="@drawable/ic_image" />
        <RadioGroup
            android:id="@+id/rg_pilihParkir1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_parkir1"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp">
            <RadioButton
                android:id="@+id/rb_standarParkir1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/standar"/>
            <RadioButton
                android:id="@+id/rb_tidakStandarparkir1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tidak_standar"/>
        </RadioGroup>
        //2
        <TextView
            android:id="@+id/tv_2"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:maxLines="8"
            android:text="@string/p_2"
            android:textColor="@color/black"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="16dp"
            android:layout_below="@id/rg_pilihParkir1"/>

        <LinearLayout
            android:id="@+id/lyt_camera_parkir_kc2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginEnd="16dp"
            android:layout_toRightOf="@id/tv_2"
            android:layout_marginTop="10dp"
            android:layout_below="@id/rg_pilihParkir1">
            <ImageView
                android:id="@+id/camera_parkir2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_camera"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_parkir2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_toRightOf="@id/tv_1"
            android:layout_below="@id/lyt_camera_parkir_kc2"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_image"
            android:background="@drawable/background_list"/>
        <RadioGroup
            android:id="@+id/rg_pilihParkir2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_parkir2"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp">
            <RadioButton
                android:id="@+id/rb_standarParkir2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/standar" />
            <RadioButton
                android:id="@+id/rb_tidakStandarparkir2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tidak_standar"/>
        </RadioGroup>
        //3
        <TextView
            android:id="@+id/tv_3"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:maxLines="8"
            android:text="@string/p_3"
            android:textColor="@color/black"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="16dp"
            android:layout_below="@id/rg_pilihParkir2"/>

        <LinearLayout
            android:id="@+id/lyt_camera_parkir_kc3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginEnd="16dp"
            android:layout_toRightOf="@id/tv_2"
            android:layout_marginTop="10dp"
            android:layout_below="@id/rg_pilihParkir2">
            <ImageView
                android:id="@+id/camera_parkir3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_camera"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_parkir3"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_toRightOf="@id/tv_1"
            android:layout_below="@id/lyt_camera_parkir_kc3"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_image"
            android:background="@drawable/background_list"/>
        <RadioGroup
            android:id="@+id/rg_pilihParkir3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_parkir3"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp">
            <RadioButton
                android:id="@+id/rb_standarParkir3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/standar"/>
            <RadioButton
                android:id="@+id/rb_tidakStandarparkir3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tidak_standar"/>
        </RadioGroup>

        <TextView
            android:id="@+id/txt_hasil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rg_pilihParkir3"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="@string/hasil"/>

        <TextView
            android:id="@+id/hasil_monitoring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rg_pilihParkir3"
            android:layout_toRightOf="@+id/txt_hasil"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_saveParkirKC"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/hasil_monitoring"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="20dp"
            android:text="Save"
            android:textSize="16sp"
            android:textStyle="bold" />


    </RelativeLayout>
</ScrollView>