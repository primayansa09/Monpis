<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/container"
    tools:context=".HomeFragment">

    <include layout="@layout/toolbar_home"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center">


            <RelativeLayout
                android:id="@+id/lyt_kc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:gravity="center">
                <LinearLayout
                    android:id="@+id/btn_kc"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:elevation="8dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/shape">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/bank_biru"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KC"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/source_sans_pro_bold"
                    android:layout_below="@id/btn_kc"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:gravity="center"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lyt_kcp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lyt_kc"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:gravity="center">
                <LinearLayout
                    android:id="@+id/btn_kcp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:elevation="8dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/shape">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/bank_biruu"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KCP"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/source_sans_pro_bold"
                    android:layout_below="@id/btn_kcp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:layout_marginTop="10dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lyt_kcp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:gravity="center">
                <LinearLayout
                    android:id="@+id/btn_unit"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="20dp"
                    android:elevation="8dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/shape">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/bank_oren"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unit"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/source_sans_pro_bold"
                    android:layout_below="@id/btn_unit"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:layout_marginTop="10dp"/>

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>