<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Unit.UnitParkirFragment">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <TextView
           android:id="@+id/name13"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="10sp"
           android:textColor="@color/white"/>
       //1
       <TextView
           android:id="@+id/tv_unit1"
           android:layout_width="180dp"
           android:layout_height="wrap_content"
           android:maxLines="8"
           android:text="@string/p_1"
           android:textColor="@color/black"
           android:fontFamily="@font/source_sans_pro_regular"
           android:layout_marginTop="70dp"
           android:layout_marginBottom="10dp"
           android:layout_marginStart="16dp"/>
       <LinearLayout
           android:id="@+id/lyt_parkir_unit1"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:layout_toRightOf="@id/tv_unit1"
           android:layout_marginEnd="16dp"
           android:layout_marginTop="10dp"
           android:layout_marginBottom="10dp">
           <ImageView
               android:id="@+id/camera_parkir_unit1"
               android:layout_width="25dp"
               android:layout_height="25dp"
               android:src="@drawable/ic_camera"/>
       </LinearLayout>

       <ImageView
           android:id="@+id/img_parkir_unit1"
           android:layout_width="match_parent"
           android:layout_height="200dp"
           android:layout_toRightOf="@id/tv_unit1"
           android:layout_below="@id/lyt_parkir_unit1"
           android:layout_marginStart="8dp"
           android:layout_marginEnd="16dp"
           android:adjustViewBounds="true"
           android:scaleType="fitXY"
           android:src="@drawable/ic_image"
           android:background="@drawable/background_list"/>
       <RadioGroup
           android:id="@+id/btn_pilihParkirUnit1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/img_parkir_unit1"
           android:layout_alignParentEnd="true"
           android:orientation="horizontal"
           android:layout_marginTop="5dp"
           android:layout_marginEnd="20dp">
           <RadioButton
               android:id="@+id/btn_standarUnit1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/standar"
               android:fontFamily="@font/source_sans_pro_regular"/>
           <RadioButton
               android:id="@+id/btn_tidakStandarunit1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/tidak_standar"
               android:fontFamily="@font/source_sans_pro_regular"/>
       </RadioGroup>
       //2
       <TextView
           android:id="@+id/tv_unit2"
           android:layout_width="180dp"
           android:layout_height="wrap_content"
           android:maxLines="8"
           android:text="@string/p_2"
           android:textColor="@color/black"
           android:fontFamily="@font/source_sans_pro_regular"
           android:layout_marginTop="70dp"
           android:layout_below="@id/btn_pilihParkirUnit1"
           android:layout_marginBottom="10dp"
           android:layout_marginStart="16dp"/>
       <LinearLayout
           android:id="@+id/lyt_parkit_unit2"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:layout_marginEnd="16dp"
           android:layout_marginTop="10dp"
           android:layout_marginBottom="10dp"
           android:layout_toRightOf="@id/tv_unit2"
           android:layout_below="@id/btn_pilihParkirUnit1">
           <ImageView
               android:id="@+id/camera_parkir_unit2"
               android:layout_width="25dp"
               android:layout_height="25dp"
               android:src="@drawable/ic_camera"/>
       </LinearLayout>

       <ImageView
           android:id="@+id/img_parkir_unit2"
           android:layout_width="match_parent"
           android:layout_height="200dp"
           android:layout_toRightOf="@id/tv_unit2"
           android:layout_below="@id/lyt_parkit_unit2"
           android:layout_marginStart="8dp"
           android:layout_marginEnd="16dp"
           android:adjustViewBounds="true"
           android:scaleType="fitXY"
           android:src="@drawable/ic_image"
           android:background="@drawable/background_list"/>
       <RadioGroup
           android:id="@+id/btn_pilihParkirUnit2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/img_parkir_unit2"
           android:layout_alignParentEnd="true"
           android:orientation="horizontal"
           android:layout_marginTop="5dp"
           android:layout_marginEnd="20dp">
           <RadioButton
               android:id="@+id/btn_standarParkirUnit2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/standar"
               android:fontFamily="@font/source_sans_pro_regular"/>
           <RadioButton
               android:id="@+id/btn_tidakStandarparkirUnit2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/tidak_standar"
               android:fontFamily="@font/source_sans_pro_regular" />
       </RadioGroup>
       //3
       <TextView
           android:id="@+id/tv_unit3"
           android:layout_width="180dp"
           android:layout_height="wrap_content"
           android:maxLines="8"
           android:text="@string/p_3"
           android:textColor="@color/black"
           android:fontFamily="@font/source_sans_pro_regular"
           android:layout_marginTop="70dp"
           android:layout_below="@id/btn_pilihParkirUnit2"
           android:layout_marginBottom="10dp"
           android:layout_marginStart="16dp"/>
       <LinearLayout
           android:id="@+id/lyt_parkir_unit3"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:layout_marginEnd="16dp"
           android:layout_marginTop="10dp"
           android:layout_marginBottom="10dp"
           android:layout_toRightOf="@id/tv_unit3"
           android:layout_below="@id/btn_pilihParkirUnit2">
           <ImageView
               android:id="@+id/camera_parkir_unit3"
               android:layout_width="25dp"
               android:layout_height="25dp"
               android:src="@drawable/ic_camera"/>

       </LinearLayout>

       <ImageView
           android:id="@+id/img_parkir_unit3"
           android:layout_width="match_parent"
           android:layout_height="200dp"
           android:layout_toRightOf="@id/tv_unit3"
           android:layout_below="@id/lyt_parkir_unit3"
           android:layout_marginStart="8dp"
           android:layout_marginEnd="16dp"
           android:adjustViewBounds="true"
           android:scaleType="fitXY"
           android:src="@drawable/ic_image"
           android:background="@drawable/background_list"/>
       <RadioGroup
           android:id="@+id/btn_pilihParkirUnit3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/img_parkir_unit3"
           android:layout_alignParentEnd="true"
           android:orientation="horizontal"
           android:layout_marginTop="5dp"
           android:layout_marginEnd="20dp">
           <RadioButton
               android:id="@+id/btn_standarParkirUnit3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/standar"
               android:fontFamily="@font/source_sans_pro_regular"/>
           <RadioButton
               android:id="@+id/btn_tidakStandarparkirUnit3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/tidak_standar"
               android:fontFamily="@font/source_sans_pro_regular"/>
       </RadioGroup>

       <Button
           android:id="@+id/btn_saveParkirUnit"
           android:layout_width="wrap_content"
           android:layout_height="50dp"
           android:layout_alignParentLeft="true"
           android:layout_alignParentRight="true"
           android:layout_marginStart="100dp"
           android:layout_marginEnd="100dp"
           android:layout_marginBottom="20dp"
           android:layout_below="@id/btn_pilihParkirUnit3"
           android:text="Save"
           android:textSize="16sp"
           android:textStyle="bold"/>
   </RelativeLayout>
</ScrollView>